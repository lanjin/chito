body
    background-color #fff

#astrobench h1
    font-size: 1.7em
    font-weight 900

h2 > div
    font-size 1.5em
    font-weight 800

.container
    margin: 0 auto
    width: 600px

.smooth-btn
    position: fixed
    left: 10px
    top: 10px
    height: 30px
    display: inline-block;
    margin-bottom: 0;
    cursor: pointer;
    color: #FFF;
    background-color: #5CB85C;
    border: 1px solid #4CAE4C;
    white-space: nowrap;
    padding: 6px 12px;
    line-height: 1.5;
    border-radius: 4px;
    text-decoration: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    &:hover
        text-decoration: none;
        background-color: #47A447;
        border-color: #398439;
